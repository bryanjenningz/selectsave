{
  "manifest_version": 2,

  "name": "Selectsave",
  "description": "Save selected text",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["textsaver.js"]
    }
  ],

  "permissions": [
    "storage"
  ]
}
